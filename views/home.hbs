{{> header}}

<script src="https://www.google.com/recaptcha/api.js?render=6LfLdvQUAAAAAGmo47NQbb4cdV73OxY2r7DmSLBj"></script>

{{> navigation}}

<div id="mdb-preloader" class="flex-center">
  <div class="preloader-wrapper active">
    <div class="spinner-layer spinner-yellow-only">
      <div class="circle-clipper left">
        <div class="circle"></div>
      </div>
      <div class="gap-patch">
        <div class="circle"></div>
      </div>
      <div class="circle-clipper right">
        <div class="circle"></div>
      </div>
    </div>
  </div>
</div>

<header class="contact-header">

  <div class="contact-bg">

    <div class="description">
      <h1 class="h1-responsive font-weight-bold text-center my-4">Contact us</h1>

      <!--Section description-->
      <p class="text-center mx-auto mb-5">Do you have any questions? Please do not hesitate to contact us directly. <br>Our team will come back to you within
        a matter of hours to help you.</p>
    </div>
  </div>

  <div class="bg img-fluid">
  </div>

</header>

<section class="mb-4">

<div class="successContainer fadeIn faster">
  <ul class="success">

  </ul>
</div>
<div class="errorContainer fadeIn faster">
  <ul class="error">

  </ul>
</div>

<div class="row">

  <div class="col-md-9 mb-md-0 mb-5">
    <form>

      <div class="row">

        <div class="col-md-6">
          <div class="md-form mb-0">
            <input type="text" id="name" name="name" class="form-control">
            <label for="name" class="">Your name</label>
          </div>
        </div>

        <div class="col-md-6">
          <div class="md-form mb-0">
            <input type="email" id="email" name="email" class="form-control">
            <label for="email" class="">Your email</label>
          </div>
        </div>

      </div>

      <div class="row">

        <div class="col-md-12">

          <div class="md-form">
            <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea"></textarea>
            <label for="message">Your message</label>
          </div>

        </div>
      </div>

      <div class="form-check">
        <input type="checkbox" name="signUp" id="signUp" class="form-check-input" value='YES'>
        <label for="signUp" class="form-check-label">I want to sign up for the newsletter!</label>
      </div>
      <div class="text-center text-md-left">

        <button effect="fadeIn" class="submit btn">Submit</button>
      </div>
    </form>

  </div>

  <div class="col-md-3 text-center">
    <ul class="list-unstyled mb-0">
      <li><i class="contact-icon fas fa-map-marker-alt fa-2x"></i>
        <p>Silver Street, Leicester, LE1 5ET</p>
      </li>

      <li><i class="contact-icon fas fa-phone mt-4 fa-2x"></i>
        <p>+ 01 234 567 89</p>
      </li>

      <li><i class="contact-icon fas fa-envelope mt-4 fa-2x"></i>
        <p>info@tastytreats.com</p>
      </li>
    </ul>
  </div>

</div>

</section>

{{> scripts}}
<script src="/js/contact.js"></script>
{{> footer}}
